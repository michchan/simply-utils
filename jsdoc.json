{
  "tags": {
    "allowUnknownTags": [
      "optional",
      "category"
    ]
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "node_modules/better-docs/category"
  ],
  "source": {
    "include": "src",
    "includePattern": "\\.(jsx|js|ts|tsx)$",
    "excludePattern": "(node_modules/|docs|(index\\.(jsx|js|ts|tsx)))"
  },
  "opts": {
    "template": "node_modules/better-docs",
    "encoding": "utf8",
    "destination": "dist_jsdoc/",
    "recurse": true,
    "verbose": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true,
    "better-docs": {
      "name": "Simply-Utils Documentation",
      "logo": "images/logo.png",
      "title": "Simply-Utils Documentation",
      "css": "style.css",
      "hideGenerator": false,
      "navLinks": [
        {
          "label": "Github",
          "href": "https://github.com/michchan/simply-utils"
        }
      ]
    }
  }
}